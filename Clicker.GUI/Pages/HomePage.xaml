<Page x:Class="Clicker.GUI.Pages.HomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Clicker.GUI.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HomePage">
    <Page.Resources>
        <ResourceDictionary Source="../Resources/Lang/string_tr.xaml"/>
    </Page.Resources>

    <Grid Background="#240246">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Button Name="btnPlay" Click="btnPlay_Click" Content="{DynamicResource play}" Height="36" Width="176" Margin="20"/>
            <Button Name="btnSettings" Click="btnSettings_Click" Content="{DynamicResource settings}" Height="36" Width="176" Margin="20"/>
        </StackPanel>
    </Grid>
</Page>
